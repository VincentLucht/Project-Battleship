{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "arrow-body-style": "off",
        "class-methods-use-this": "off",
        "no-else-return": "off",
        "brace-style": "off",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "operator-linebreak": "off"
    }
}
